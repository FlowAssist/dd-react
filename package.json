{
  "name": "dd-react",
  "version": "1.0.0",
  "description": "Library for drag and drop",
  "repository": "https://github.com/FlowAssist/dd-react.git",
  "author": "Krit Bannachaisirisuk <gmkipladen@gmail.com>",
  "license": "MIT",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "dev": "nodemon -e ts,tsx -w ./src -x npm run build",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.4"
  },
  "nodemonConfig": {
    "ignore": ["*.test.(ts|tsx)$", "example/*"],
    "delay": 2500,
    "execMap": {
      "tsx": "npm run build",
      "ts": "npm run build"
    }
  }
}
